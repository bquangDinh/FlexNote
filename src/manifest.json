{
  "manifest_version": 2,
  "name": "Flexpad",
  "homepage_url": "http://localhost:8080/",
  "description": "Select a text and open a Wikipedia pop up right inside your page, support Google Translation and Oxford Dictionaries",
  "default_locale": "en",
  "version": "0.0.0.1",
  "permissions": [
    "storage",
    "contextMenus"
  ],
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Flexpad",
    "default_icon": {
      "19": "icons/19.png",
      "38": "icons/38.png"
    }
  },
  "content_scripts": [
      {
          "matches": [
              "<all_urls>"
          ],
          "js": [
              "js/content-script.js"
          ]
      }
  ],
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  }
}
